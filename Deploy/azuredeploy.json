{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
    "resourceLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "allowedValues": [
        "[resourceGroup().location]",
        "asia",
        "asiapacific",
        "australia",
        "australiacentral",
        "australiacentral2",
        "australiaeast",
        "australiasoutheast",
        "brazil",
        "brazilsouth",
        "brazilsoutheast",
        "canada",
        "canadacentral",
        "canadaeast",
        "centralindia",
        "centralus",
        "centraluseuap",
        "centralusstage",
        "chinaeast",
        "chinanorth",
        "eastasia",
        "eastasiastage",
        "eastus",
        "eastus2",
        "eastus2euap",
        "eastus2stage",
        "eastusstage",
        "europe",
        "francecentral",
        "francesouth",
        "germanycentral",
        "germanynorth",
        "germanynortheast",
        "germanywestcentral",
        "global",
        "india",
        "japan",
        "japaneast",
        "japanwest",
        "jioindiawest",
        "koreacentral",
        "koreasouth",
        "northcentralus",
        "northcentralusstage",
        "northeurope",
        "norwayeast",
        "norwaywest",
        "southafricanorth",
        "southafricawest",
        "southcentralus",
        "southcentralusstage",
        "southeastasia",
        "southeastasiastage",
        "southindia",
        "switzerland",
        "switzerlandnorth",
        "switzerlandwest",
        "uaecentral",
        "uaenorth",
        "uk",
        "uksouth",
        "ukwest",
        "unitedstates",
        "usdodeast",
        "usdodwest",
        "usgovarizona",
        "usgoviowa",
        "usgovtexas",
        "usgovvirginia",
        "usseceast",
        "ussecwest",
        "west",
        "westcentralus",
        "westeurope",
        "westindia",
        "westus",
        "westus2",
        "westus2stage",
        "westus3",
        "westusstage"
      ],
      "metadata": {
        "description": "Location of the Resources."
      }
    },
       "NetworkSummaryPlaybookName": {
          "defaultValue": "DataLake-Summarize-Network",
          "type": "string"
        },
      "NetworkEnrichmentPlaybookName": {
       "defaultValue": "DataLake-Enrich-Network",
       "type": "string"
        },
        "ADXClusterURI": {
            "type": "string",
            "metadata": {
                "description": "Your ADX Cluster URI"
              }
        },
        "SentinelWorkspaceName": {
            "metadata": {
                "description": "The Microsoft Sentinel workspace into which the function will be deployed. Has to be in the selected Resource Group."
            },
            "type": "string"
        },
        "SentinelWorkspaceID": {
             "type": "string",
             "metadata": {
             "description": "The workspace ID of your Sentinel workspace"
              }
        },
        "SentinelWorkspaceKey": {
         "type": "securestring",
         "metadata": {
         "description": "The workspace key of your Sentinel workspace"
              }
        }
     },
    "variables": {
        "NetworkSummariesTemplate": "[concat('https://raw.githubusercontent.com/seyed-nouraie/Azure-Security-Data-Lake/V2/Summarization/Network/azuredeploy.json')]",
        "NetworkEnrichmentTemplate": "[concat('https://raw.githubusercontent.com/seyed-nouraie/Azure-Security-Data-Lake/V2/Enrichment/Network/azuredeploy.json')]",
        "FunctionsTemplate": "[concat('https://raw.githubusercontent.com/seyed-nouraie/Azure-Security-Data-Lake/V2/Functions/azuredeploy.json')]",
        "WorkbookTemplate": "[concat('https://raw.githubusercontent.com/seyed-nouraie/Azure-Security-Data-Lake/V2/Workbooks/azuredeploy.json')]"
    },
    "resources": [
        {
            "apiVersion": "2019-10-01",
            "name": "NetworkSummariesTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('NetworkSummariesTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "PlaybookName": {
                        "value": "[parameters('NetworkSummaryPlaybookName')]"
                    },
                    "ADXClusterURI": {
                        "value": "[parameters('ADXClusterURI')]"
                    },
                    "SentinelWorkspaceID":{
                        "value": "[parameters('SentinelWorkspaceID')]"
                    },
                    "SentinelWorkspaceKey":{
                     "value": "[parameters('SentinelWorkspaceKey')]"
                    },
                    "logicAppLocation":{
                        "value": "[parameters('resourceLocation')]"
                    }
            }
        }
     },
     {
        "apiVersion": "2019-10-01",
        "name": "NetworkEnrichmentPlaybook",
        "type": "Microsoft.Resources/deployments",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[variables('NetworkEnrichmentTemplate')]",
                "contentVersion": "1.0.0.0"
            },
            "parameters": {
                "PlaybookName": {
                    "value": "[parameters('NetworkEnrichmentPlaybookName')]"
                },
                "ADXClusterURI": {
                    "value": "[parameters('ADXClusterURI')]"
                },
                "logicAppLocation":{
                    "value": "[parameters('resourceLocation')]"
                }
            }
        },
        {
            "apiVersion": "2019-10-01",
            "name": "SummaryFunctionsTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('FunctionsTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "WorkspaceName": {
                        "value": "[parameters('SentinelWorkspaceName')]"
                    },
                    "functionsLocation":{
                        "value": "[parameters('resourceLocation')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2019-10-01",
            "name": "SummaryWorkbooksTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('WorkbookTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "ADXClusterURI": {
                        "value": "[parameters('ADXClusterURI')]"
                    },
                    "sentinelWorkspace": {
                        "value": "[parameters('SentinelWorkspaceName')]"
                    },
                    "workbookLocation":{
                        "value": "[parameters('resourceLocation')]"
                    }
                }
            }
        }
    ]
 }
