{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
       "NetworkSummaryPlaybookName": {
          "defaultValue": "MSDX-Summarize-Network",
          "type": "string"
        },
      "NetworkEnrichmentPlaybookName": {
       "defaultValue": "MSDX-Enrich-Network",
       "type": "string"
        },
        "WorkspaceName": {
            "defaultValue": "The Microsoft Sentinel workspace into which the function will be deployed. Has to be in the selected Resource Group.",
            "type": "string"
        },
        "ADXClusterURI": {
            "defaultValue": "https://<YOURADXURI>.centralus.kusto.windows.net/",
            "type": "string",
            "metadata": {
                "description": "Your ADX Cluster URI"
              }
        },
        "ADXDataBase": {
            "defaultValue": "adxdata001",
            "type": "string",
            "metadata": {
                "description": "Your ADX Database Name"
              }
        },
        "DeploymentBranch": {
            "defaultValue": "main",
            "type": "string"
        },
        "SentinelWorkspaceID": {
             "type": "string",
             "metadata": {
             "description": "The workspace ID of your Sentinel"
              }
        },
        "SentinelWorkspaceKey": {
         "type": "securestring",
         "metadata": {
         "description": "The workspace key of your Sentinel workspace"
              }
        }
     },
    "variables": {
        "NetworkSummariesTemplate": "[concat('https://raw.githubusercontent.com/seyed-nouraie/MSDX/', parameters('DeploymentBranch'), '/Summarization/Network/azuredeploy.json')]",
        "NetworkEnrichmentTemplate": "[concat('https://raw.githubusercontent.com/seyed-nouraie/MSDX/', parameters('DeploymentBranch'), '/Enrichment/Network/azuredeploy.json')]",
        "FunctionsTemplate": "[concat('https://raw.githubusercontent.com/seyed-nouraie/MSDX/', parameters('DeploymentBranch'), '/Functions/azuredeploy.json')]",
        "WorkbookTemplate": "[concat('https://raw.githubusercontent.com/seyed-nouraie/MSDX/', parameters('DeploymentBranch'), '/Workbooks/azuredeploy.json')]"
    },
    "resources": [
        {
            "apiVersion": "2019-10-01",
            "name": "NetworkSummariesTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('NetworkSummariesTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "PlaybookName": {
                        "value": "[parameters('NetworkSummaryPlaybookName')]"
                    },
                    "ADXClusterURI": {
                        "value": "[parameters('ADXClusterURI')]"
                    },
                    "SentinelWorkspaceID":{
                        "value": "[parameters('SentinelWorkspaceID')]"
                    },
                    "SentinelWorkspaceKey":{
                     "value": "[parameters('SentinelWorkspaceKey')]"
                    }
            }
        }
     },
     {
        "apiVersion": "2019-10-01",
        "name": "NetworkEnrichmentPlaybook",
        "type": "Microsoft.Resources/deployments",
        "properties": {
            "mode": "Incremental",
            "templateLink": {
                "uri": "[variables('NetworkEnrichmentTemplate')]",
                "contentVersion": "1.0.0.0"
            },
            "parameters": {
                "PlaybookName": {
                    "value": "[parameters('NetworkEnrichmentPlaybookName')]"
                },
                "ADXClusterURI": {
                    "value": "[parameters('ADXClusterURI')]"
                }
                }
            }
        },
        {
            "apiVersion": "2019-10-01",
            "name": "SummaryFunctionsTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('FunctionsTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "WorkspaceName": {
                        "value": "[parameters('WorkspaceName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2019-10-01",
            "name": "SummaryWorkbooksTemplate",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('NetworkEnrichmentTemplate')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "ADXClusterURI": {
                        "value": "[parameters('ADXClusterURI')]"
                    }
                }
            }
        }
    ]
 }